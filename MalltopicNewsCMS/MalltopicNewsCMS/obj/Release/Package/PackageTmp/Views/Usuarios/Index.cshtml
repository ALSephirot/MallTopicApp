@{
    var script = "";
    var valor = ViewBag.message;

    if (valor == "LoginFailed")
    {
        script = "Fallo";
    }
}
<script src="~/Scripts/jquery-2.1.1.min.js"></script>
<script>
    $(document).ready(function () {

        var result = "@script";
        if (result == "Fallo") {
            $(".errosValidation").fadeIn(1000);
        }
        else {
            $(".errosValidation").fadeOut(1000);
        }

    });

</script>

