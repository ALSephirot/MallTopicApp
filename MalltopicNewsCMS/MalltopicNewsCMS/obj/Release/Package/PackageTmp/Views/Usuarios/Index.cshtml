@model MalltopicNewsCMS.Models.usuarios
@using MalltopicNewsCMS.Controllers;
@{ViewBag.Title = "Iniciar sesión";
Login_Logout lg = new Login_Logout();
}

@if (lg.VerificarSesion() == false)
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="bolsaError"></div>
        <div class="content">
            <h2>Iniciar sesión</h2>
            <div class="form-group">
                @Html.LabelFor(model => model.nombreusuario, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.nombreusuario)
                    <br />
                    @Html.ValidationMessageFor(model => model.nombreusuario)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.contrasena, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.contrasena)
                    <br />
                    @Html.ValidationMessageFor(model => model.contrasena)
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Iniciar sesión" id="btnCargar" class="botonAzul" />
                </div>
            </div>
        </div>
        <div class="errosValidation">
            @Html.ValidationSummary(true)
        </div>

    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/Scripts/jquery-2.1.1.min.js")
    }

}
else
{

    Response.Redirect("~/Home/Index");

}
